<?xml version="1.0" encoding="utf-8"?>
<se.fermitet.android.infektionsdagbok.views.ExportView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >
 
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Export"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="10dp"
         />
    
    <TextView
        android:id="@+id/startTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:text="Start"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/endTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startTV"
        android:layout_alignLeft="@id/title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Slut" />

    <TextView
        android:id="@+id/startDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignTop="@id/startTV"
        android:layout_alignBottom="@id/startTV"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/startTV"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2014-01-01"
        android:clickable="true"
         />

    <TextView
        android:id="@+id/endDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/startDateTV"
        android:layout_alignTop="@id/endTV"
        android:layout_alignBottom="@id/endTV"
        android:layout_below="@id/startDateTV" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2014-10-07"
        android:clickable="true"
        />

    <Button
        android:id="@+id/exportBTN"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@id/endTV"
        android:layout_below="@id/endDateTV"
        android:text="Exportera"
        android:clickable="true" />
    
</se.fermitet.android.infektionsdagbok.views.ExportView>
