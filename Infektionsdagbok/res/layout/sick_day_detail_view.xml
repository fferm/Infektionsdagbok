<?xml version="1.0" encoding="utf-8"?>
<se.fermitet.android.infektionsdagbok.views.SickDayDetailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <include layout="@layout/screen_header" />

    <include layout="@layout/detail_buttons" />

    <TextView
        android:id="@+id/startHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/saveBTN"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Start:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <se.fermitet.android.infektionsdagbok.widget.DateTextView
        android:id="@+id/startTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/startHeader"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/startHeader"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/background_not_selected_item" />

    <TextView
        android:id="@+id/endHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/startTV"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Slut:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <se.fermitet.android.infektionsdagbok.widget.DateTextView
        android:id="@+id/endTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/startTV"
        android:layout_alignTop="@id/endHeader"
        android:layout_toRightOf="@id/endHeader"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/background_not_selected_item" />


</se.fermitet.android.infektionsdagbok.views.SickDayDetailView>